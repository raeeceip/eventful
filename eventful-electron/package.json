{
  "name": "eventful-client",
  "version": "1.0.0",
  "description": "Eventful Client Application",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder --dir",
    "make": "electron-builder"
  },
  "dependencies": {
    "axios": "^0.21.1"
  },
  "devDependencies": {
    "electron": "^13.6.9",
    "electron-builder": "^22.14.13"
  },
  "build": {
    "appId": "com.eventful.client",
    "files": [
      "**/*",
      "resources/backend"
    ],
    "extraResources": [
      {
        "from": "resources/backend",
        "to": "backend"
      }
    ],
    "mac": {
      "category": "public.app-category.productivity"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}